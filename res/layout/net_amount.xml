<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        >
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/background">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TNEB UnitCalculator"
                android:paddingTop="10dp"
                android:id="@+id/header"
                android:textSize="25dip"
                android:textColor="#fffafe"
                android:typeface="normal"
                android:layout_centerHorizontal="true"
                />
        <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                android:background="#010001"
                android:layout_marginTop="45dp"
                android:padding="8dp"
                >
            <TableRow android:layout_marginBottom="1dp" android:background="#000000">
                 <TextView android:text="Units Entered:"
                           android:layout_weight="70"
                           android:textSize="20dp"
                           android:padding="20dp" />
                 <TextView android:layout_height="wrap_content"
                           android:layout_weight="30"
                           android:text=""
                           android:gravity="right"
                           android:textSize="20dp"
                           android:id="@+id/unitsEntered"
                           android:padding="15dp" />
            </TableRow>
            <View
                    android:layout_height="2dip"
                    android:background="#FF0000" />
            <TableRow android:layout_marginBottom="2dp" android:background="#000000">
                 <TextView android:text="Consumption charges:"
                           android:layout_weight="70"
                           android:layout_width="20dp"
                           android:textSize="20dp"
                           android:padding="20dp"/>
                 <TextView android:layout_height="wrap_content"
                           android:layout_weight="30"
                           android:layout_width="100dp"
                           android:id="@+id/consumption"
                           android:text=""
                           android:gravity="right"
                           android:textSize="20dp"
                           android:padding="15dp" />
            </TableRow>
            <TableRow  android:background="#000000">
                 <TextView android:text="FixedCharge:"
                           android:layout_weight="70"
                           android:textSize="20dp"
                           android:padding="20dp" />
                <TextView android:layout_height="wrap_content"
                          android:layout_weight="30"
                          android:layout_width="100dp"
                          android:id="@+id/fixedCharge"
                          android:text=""
                          android:gravity="right"
                          android:textSize="20dp"
                          android:padding="15dp" />
            </TableRow>
            <View
                    android:layout_height="2dip"
                    android:background="#FF0000" />
            <TableRow  android:background="#000000">
                 <TextView android:text="Net Amount Rs:"
                           android:layout_weight="70"
                           android:textSize="20dp"
                           android:padding="20dp" />
                <TextView android:layout_height="wrap_content"
                          android:layout_weight="30"
                          android:id="@+id/amount"
                          android:layout_width="100dp"
                          android:text=""
                          android:gravity="right"
                          android:textSize="20dp"
                          android:padding="15dp" />
            </TableRow>
            <View
                    android:layout_height="2dip"
                    android:background="#FF0000"
                    />
        </TableLayout>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Go Back"
                android:textSize="20dp"
                android:typeface="normal"
                android:autoLink="phone"
                android:id="@+id/goBack" android:layout_centerHorizontal="true" android:layout_alignParentTop="true"
                android:layout_marginTop="380dp" android:textColor="#4adbff"/>
    </RelativeLayout>
</ScrollView>